extends layout

block css
  link(rel='stylesheet',href='/css/style.css')

block content
  div(class='site-wrapper')
    div(class='site-wrapper-inner')
      div(class='cover-container')
        div(class='masthead clearfix')
          div(class='inner')
            nav
              ul(class='nav masthead-nav')
                li
                  a(href='#') Home
                li
                  a(href='http://svrround.com/katie-quinn', class='live') Live Stream
        div(class='inner cover')
          h1(class='cover-heading')
            img(src='/images/logo.png',alt='Svrround', width="400")
          p(class='lead') 360&deg; live streams with your favorite artists
          div(class='row')
            div(class='col-md-2 col-lg-3')
            div(class='col-md-8 col-lg-6')
              form(id='signup')
                input(type='email', placeholder='Your Email', class='text-center form-control input-lg email')
                br
                input(type='submit', value='Sign up', class='btn btn-default btn-lg btn-block btn-custom')
              div(class='thanks')
               p(class='lead largep') Thank you!
               p(class='lead') You'll hear from us soon
            div(class='col-md-2 col-lg-3')
          p(class='lead')
            

        div(class='mastfoot')
          div(class='inner')
            p
              a(href='https://www.facebook.com/svrroundvr', target='blank') Facebook
      
block javascript
  script(src='/js/global.js')